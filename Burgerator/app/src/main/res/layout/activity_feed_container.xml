<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@drawable/burger_feed_border"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp" >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgv_user_image"
                    android:gravity="top"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:id="@+id/restaurant_name"
                        android:gravity="top"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:text="foo" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:id="@+id/imageView4"
                        android:background="#000000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView"
                        android:layout_marginRight="10dp"
                        android:id="@+id/relativeLayout"
                        android:layout_toRightOf="@+id/imageView3"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/restaurant_address"
                            android:layout_below="@+id/burger_name"
                            android:layout_toRightOf="@+id/imgv_user_image"
                            android:layout_marginRight="55dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:text="518 N Burger Lane"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/burger_name"
                            android:layout_below="@+id/restaurant_name"
                            android:layout_toRightOf="@+id/imgv_user_image"
                            android:layout_marginRight="55dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textIsSelectable="false" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="34dp"
                            android:id="@+id/rating_value"
                            android:textAlignment="center"
                            android:layout_toRightOf="@id/burger_name"
                            android:layout_below="@+id/restaurant_name"
                            android:hint="9.650"
                            android:layout_marginLeft="-50dp"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:id="@+id/rating_text"
                            android:text="rating"
                            android:layout_toRightOf="@id/restaurant_address"
                            android:layout_below="@id/rating_value"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="-55dp" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#000000" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:id="@+id/imgv_burger_picture"
                        android:layout_below="@+id/imgv_user_image"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:background="#000000" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@+id/imgv_burger_picture"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:gravity="right">
            <!-- Hidden until Implemented in code base
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/amount_burger_pounded"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:text="5"
                android:layout_gravity="center_vertical|right"
                android:singleLine="false"
                android:textAlignment="center"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtn_pound_it"
                android:background="@drawable/pound_button"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="20dp" />
            -->
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>