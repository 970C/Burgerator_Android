<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@drawable/burger_feed_border"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgv_user_image"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/restaurant_name"
        android:gravity="top"
        android:layout_toRightOf="@+id/imgv_user_image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:id="@+id/burger_name"
        android:layout_below="@+id/restaurant_name"
        android:layout_toRightOf="@+id/imgv_user_image"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:id="@+id/restaurant_address"
        android:layout_below="@+id/burger_name"
        android:layout_toRightOf="@+id/imgv_user_image"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:text="518 N Burger Lane"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/rating_value"
        android:textAlignment="center"
        android:layout_toRightOf="@id/burger_name"
        android:layout_below="@+id/restaurant_name"
        android:text="9"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:id="@+id/rating_text"
        android:text="rating"
        android:layout_toRightOf="@id/restaurant_address"
        android:layout_below="@id/rating_value"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="330dp"
        android:layout_height="400dp"
        android:id="@+id/imgv_burger_picture"
        android:layout_below="@+id/imgv_user_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/imgv_burger_picture">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/amount_burger_pounded"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="5 persons pounded it"/>

        <ImageButton
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/imgbtn_pound_it"
            android:background="@drawable/pound_button"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>