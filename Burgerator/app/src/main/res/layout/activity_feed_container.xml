<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="640dp"
    android:background="@drawable/burger_feed_border"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgv_user_image"
        android:gravity="top"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/restaurant_name"
        android:gravity="top"
        android:layout_toRightOf="@+id/imgv_user_image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/burger_name"
        android:layout_below="@+id/restaurant_name"
        android:layout_toRightOf="@+id/imgv_user_image"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/restaurant_address"
        android:layout_below="@+id/burger_name"
        android:layout_toRightOf="@+id/imgv_user_image"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/imgv_burger_picture"
        android:layout_below="@+id/imgv_user_image"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@+id/imgv_burger_picture">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/amount_burger_pounded"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/imgbtn_pound_it"
            android:background="@drawable/pound_it"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>