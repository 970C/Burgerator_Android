
<!-- second box of the rating window -->
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


<TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/tv_taste" android:text="@string/taste" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/seekbtn_taste"
        android:progressDrawable="@drawable/scroll_bar_marks"
        android:background="@drawable/scroll_bar_background"/>


<TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/tv_toppings" android:text="@string/toppings" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/seekbtn_toppings"
        android:progressDrawable="@drawable/scroll_bar_marks"
        android:background="@drawable/scroll_bar_background"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/tv_bun" android:text="@string/bun" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/seekbtn_bun"
        android:progressDrawable="@drawable/scroll_bar_marks"
        android:background="@drawable/scroll_bar_background"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_come_back"
            android:text="@string/would_you_come_back_for_the_burger" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_come_back"
            android:orientation="horizontal"
            android:gravity="right"
            android:id="@+id/radgrp_wycbftb">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radbtn_thumbs_up"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radbtn_thumbs_down"
                />
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>