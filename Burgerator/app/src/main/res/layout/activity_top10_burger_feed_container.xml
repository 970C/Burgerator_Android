<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/burger_feed_border"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            android:id="@+id/imgv_burger_ranking"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/restaurant_name"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imgv_burger_ranking"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/burger_name"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_below="@+id/restaurant_name"
            android:layout_toRightOf="@+id/imgv_burger_ranking"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/restaurant_address"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_below="@+id/burger_name"
            android:layout_toRightOf="@+id/imgv_burger_ranking"/>

        <ImageView
            android:layout_width="330dp"
            android:layout_height="400dp"
            android:id="@+id/imgv_burger_picture"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/imgv_burger_ranking"
            android:background="@drawable/bacon_cheddar_burger"/>

</RelativeLayout>

