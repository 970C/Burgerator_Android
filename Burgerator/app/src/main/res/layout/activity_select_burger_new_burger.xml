<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_correctly"
        android:textSize="12dp"
        android:background="#ffffff"
        android:padding="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/burger_name"
        android:singleLine="true"
        android:id="@+id/et_new_burger_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!--ok button-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtn_ok_new_burger"
            android:background="@drawable/add_bugr_yes_btn"
            android:layout_marginRight="5dp" />

        <!--cancel button-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgbtn_cancel_new_burger"
            android:background="@drawable/add_bugr_no_btn"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</LinearLayout>