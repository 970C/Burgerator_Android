<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="burgerator.ui.LoginActivity"
    android:background="@drawable/background">

    <include
        layout="@layout/banner"
        android:id="@+id/banner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_below="@id/banner">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_join_the_burger_club"
            android:src="@mipmap/app_icon"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/loginOptions"
            android:layout_below="@id/img_join_the_burger_club"
            android:gravity="center_horizontal">


            <ImageButton
                android:layout_width="216dp"
                android:layout_height="50dp"
                android:id="@+id/btn_facebook_login"
                android:onClick="facebookRegister"
                android:background="@drawable/register_fb"
                android:paddingRight="5dp" />


            <ImageButton
                android:layout_width="216dp"
                android:layout_height="50dp"
                android:id="@+id/emailRegister"
                android:onClick="emailRegister"
                android:background="@drawable/register_email"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/img_member_login" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_email_address"
            android:textSize="14dp"
            android:singleLine="true"
            android:hint="@string/user_email"
            android:textIsSelectable="false"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/et_password"
            android:hint="@string/password"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="14dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/link_forgotten_password"
            android:onClick="forgottenPassword"
            android:text="forgot password?"
            android:textSize="16dp"
            android:background="@drawable/login_button_border"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_login"
            android:onClick="emailLogin"
            android:text="login : let's do this!"
            android:textSize="16dp"
            android:background="@drawable/login_button_border"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />



    </LinearLayout>
</RelativeLayout>
