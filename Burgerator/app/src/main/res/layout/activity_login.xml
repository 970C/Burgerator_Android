<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="burgerator.ui.LoginActivity">

    <include
        layout="@layout/banner"
        android:id="@+id/banner"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/banner"
        android:id="@+id/img_join_the_burger_club"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/loginOptions"
        android:layout_below="@id/img_join_the_burger_club">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_facebook_login"
            android:onClick="facebookRegister"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_twitter_login"
            android:onClick="twitterRegister"
            android:layout_toRightOf="@id/btn_facebook_login"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/loginOptions"
        android:id="@+id/img_member_login" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_email_address"
        android:layout_below="@id/img_member_login"
        android:text="harokevin@yahoo.com"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_password"
        android:layout_below="@id/et_email_address"
        android:text="password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/link_forgotten_password"
        android:layout_below="@id/et_password"
        android:onClick="forgottenPassword"
        android:text="forgot password?"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_login"
        android:layout_below="@id/link_forgotten_password"
        android:onClick="emailLogin"
        android:text="login : let's do this!"/>


</RelativeLayout>
