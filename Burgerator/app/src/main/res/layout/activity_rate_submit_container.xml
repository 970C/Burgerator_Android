<!-- fourth box of the rating window -->
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/profile_background">


    <ToggleButton
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:id="@+id/tglbtn_facebook"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/facbook_share_button"/>


    <ToggleButton
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:id="@+id/tglbtn_twitter_toggle_button"
        android:layout_toRightOf="@id/tglbtn_facebook"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/twitter_share_button"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/btn_submit"
        android:layout_below="@id/tglbtn_facebook"
        android:text="Submit Rating"
        android:textColor="@color/White"
        android:onClick="onRatingSubmit"
        android:background="@drawable/red_button"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>